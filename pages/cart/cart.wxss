.cart {
  width: 100%;
  padding-bottom: 190rpx;
}

.cart-content {
  width: 100%;
  position: relative;
  box-sizing: border-box;
}

.checkbox {
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 100;
}

.cart .van-card {
  box-sizing: border-box;
  padding-left: 60rpx;
}

.delete-button {
  height: 100%;
  width: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: red;
}

.submit-bar {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  width: 100%;
  height: 90rpx;
  z-index: 100;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.submit-bar .left {
  width: 180rpx;
}

.submit-bar .price {
  flex: 1;
}

.submit-bar .right {
  width: 260rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: red;
  color: #fff;
  border-radius: 45rpx;
}

.noLogin {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100vh;
}

.noLogin view {
  margin-bottom: 10px;
}